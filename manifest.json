{
  "manifest_version": 3,
  "name": "Sanctum Rank Checker",
  "version": "1.0",
  "description": "Check your Sanctum Rank!",
  "permissions": ["activeTab", "storage"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "persistent": false
  }
}